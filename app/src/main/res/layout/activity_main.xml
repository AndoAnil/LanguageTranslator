<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/back"
    android:orientation="horizontal"
    >
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <EditText
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/edittextback"
            android:layout_margin="10dp"
            android:gravity="center"
            android:hint="Enter text"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textColorHint="@color/colorPrimary"
            android:id="@+id/editTextTextMultiLine"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/selectUserOneLanguage"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edittextback"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Select language"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/voiceUserOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background"
                android:src="@drawable/micropho" />


            <ImageButton
                android:id="@+id/translate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background"
                android:src="@drawable/exchange" />
        </LinearLayout>
    </LinearLayout>





    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <EditText
            android:textAlignment="center"
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/editextuser2"
            android:layout_margin="10dp"
            android:gravity="center"
            android:hint="Enter text"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textColorHint="@color/white"
            android:id="@+id/editTextTextMultiLine2"/>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <ImageButton
              android:id="@+id/translateOne"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="30dp"
              android:layout_marginTop="10dp"
              android:layout_marginEnd="20dp"
              android:background="@drawable/background"
              android:src="@drawable/exchange" />

          <ImageButton
              android:id="@+id/voiceUserTwo"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="25dp"
              android:layout_marginTop="10dp"
              android:layout_marginEnd="20dp"
              android:background="@drawable/background"
              android:src="@drawable/micropho" />


          <TextView
              android:id="@+id/selectUserTwoLanguage"
              android:layout_width="120dp"
              android:layout_height="50dp"
              android:layout_marginStart="30dp"
              android:background="@drawable/editextuser2"
              android:gravity="center"
              android:textStyle="bold"
              android:text="Select language"
              android:textColor="@color/white"
              android:textSize="20dp" />
      </LinearLayout>

    </LinearLayout>
        
</LinearLayout>